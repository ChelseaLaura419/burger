  <div class="jumbotron">
  <h1 class="display-4">Create a Burger</h1>
  <hr class="my-4">
  <form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">Is the Burger good?</label><br>
    <input type="radio" name="devoured" value="1" checked> Eat-da-burger<br>
    <input type="radio" name="devoured" value="0"> Add Burger to the Menu
  </div>

  <button class="btn btn-primary btn-lg" type="submit">Add Burger</button>
</form>
</div>

<div class="container">
  <div class="row">
    <div class="col">
      <h4>Burgers On The Menu</h4>
      <ul>
        {{#each burgers}}
         {{#unless devoured}}
           {{> burgers/burger-block devour=true}}
          {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col">
      <h4>Burgers That Have Been Eaten</h4>
      <ul>
        {{#each burgers}}
          {{#if devoured}}
            {{> burgers/burger-block devour=false}}
          {{/if}}
          {{/each}}
        </ul>
    </div>
  </div>

<br>
<br>
</div>
